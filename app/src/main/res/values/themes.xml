<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDoList" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/very_dark_grayish_blue</item>
        <item name="colorPrimaryVariant">@color/dark_grayish_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/very_dark_grayish_blue</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
    </style>

    <style name="txt_v">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/roboto_mono</item>
        <item name="android:text">@string/sample_txt</item>
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="txt_field" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/roboto_mono</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:text">@string/sample_txt</item>
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:textColorHint">@color/teal_700</item>
        <item name="hintTextColor">@color/teal_700</item>
        <item name="android:textSize">14sp</item>
        <item name="boxStrokeColor">@color/very_dark_grayish_blue</item>
        <item name="boxStrokeWidthFocused">0.5dp</item>
        <item name="boxStrokeWidth">0.5dp</item>
    </style>

    <style name="material_btn" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="fontFamily">@font/roboto_mono</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:text">@string/sample_txt</item>
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:textSize">14sp</item>
        <item name="backgroundColor">@color/very_dark_grayish_blue</item>
    </style>

    <style name="material_btn_icon" >
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="cornerRadius">15dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:textSize">14sp</item>
        <item name="backgroundColor">@color/very_dark_grayish_blue</item>
    </style>
</resources>